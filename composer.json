{
  "name": "aradeid/flarum-references",
  "description": "Adds a reference management system to flarum articles, similar to wiki pages",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.2"
  },
  "authors": [
    {
      "name": "Aradeid",
      "role": "Developer"
    },
    {
      "name": "Block-cat",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Aradeid\\FlarumReferences\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Flarum References",
      "icon": {
        "name": "fas fa-link",
        "backgroundColor": "#fa0",
        "color": "#fff"
      }
    }
  }
}
